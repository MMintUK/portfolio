<footer class="p--2 text--small">

	<div class="grid grid--footer">

    <div class="grid__item">
      <span>&copy; {{ settings.metadata.site_title or "Site Title" }}</span>
    </div>

    <div class="video-container">
    <div  class="" id="VideoPlayer">
    <script async src="https://www.youtube.com/iframe_api"></script>
     <script>
                 function onYouTubeIframeAPIReady() {
                  var player;
                  player = new YT.Player('VideoPlayer', {
                    videoId: 'bbgYzPBe4b4', // YouTube Video ID
                    width: 560,               // Player width (in px)
                    height: 400,              // Player height (in px)
                    playerVars: {
                      autoplay: 0,        // Auto-play the video on load
                      controls: 1,        // Show pause/play buttons in player
                      showinfo: 0,        // Hide the video title
                      modestbranding: 1,  // Hide the Youtube Logo
                      loop: 5,            // Run the video in a loop
                      fs: 0,              // Hide the full screen button
                      cc_load_policy: 0, // Hide closed captions
                      iv_load_policy: 3,  // Hide the Video Annotations
                      autohide: 0         // Hide video controls when playing
                    },
                    events: {
                      onReady: function(e) {
                        e.target.mute();
                      }
                    }
                  });
                 }

      </script>
    </div> 
    </div>

    {% if settings.metadata.site_email %}
      <div class="grid__item">
        <span>
          <a href="mailto:{{ settings.metadata.site_email }}">{{ settings.metadata.site_email }}</a>
        </span>
      </div>
    {% endif %}

    {% if settings.metadata.site_social_url %}
      <div class="grid__item">
        <span>
          <a href="{{ settings.metadata.site_social_url }}" target="_blank" rel="noopener">{{ settings.i18n.site_social_title }}</a>
        </span>
      </div>
    {% endif %}

  </div>

</footer>
